{
  "name": "@dkstore/utils",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "description": "Shared utilities for DkStore.",
  "sideEffects": false,
  "exports": {
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch",
    "clean": "git clean -xdf .turbo dist node_modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dkstore/env": "workspace:*",
    "bcryptjs": "^3.0.2",
    "colorette": "^2.0.20",
    "jose": "^6.0.10",
    "slugify": "^1.6.6",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@dkstore/tsconfig": "workspace:*",
    "@ncontiero/eslint-config": "5.1.1",
    "@rslib/core": "^0.6.3",
    "@types/node": "^22.14.1",
    "eslint": "^9.24.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20"
  }
}