{
  "name": "@dkstore/email",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "description": "Emails for DKStore.",
  "sideEffects": false,
  "exports": {
    "./*": {
      "types": "./dist/emails/*.d.ts",
      "import": "./dist/emails/*.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently --kill-others --names \"email-web,email-build\" -c \"black,blue\" \"email dev -p 3001 -d src/emails\" \"rslib build --watch\"",
    "build": "rslib build",
    "clean": "git clean -xdf .turbo dist node_modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dkstore/env": "workspace:*",
    "@dkstore/ui": "workspace:*",
    "@react-email/components": "0.0.36",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@dkstore/tsconfig": "workspace:*",
    "@ncontiero/eslint-config": "5.1.1",
    "@rsbuild/plugin-react": "^1.1.1",
    "@rslib/core": "^0.6.1",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.23.0",
    "react-email": "4.0.4",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=20"
  }
}
