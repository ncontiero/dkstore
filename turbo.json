{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "ui": "tui",
  "tasks": {
    "build": {
      "env": [
        "DATABASE_URL",
        "JWT_SECRET",
        "QUEUE_DASHBOARD_BASEURL",
        "SITE_NAME",
        "SITE_LOCALE",
        "SITE_BASEURL"
      ],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "next-env.d.ts"]
    },
    "clean": {
      "dependsOn": ["^clean"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build", "^typecheck"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "dev": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "env": ["DATABASE_URL"],
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "db:deploy": {
      "env": ["DATABASE_URL"],
      "cache": false
    }
  }
}
